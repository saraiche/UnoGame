<Page x:Class="unoProyect.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:p="clr-namespace:unoProyect.Properties"
      xmlns:local="clr-namespace:unoProyect"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.login}" MinWidth="800" MinHeight="450">

    <Grid Background="#FFF9F9F9">
        <Label Content="{x:Static p:Resources.chat}" HorizontalAlignment="Left" Height="25" Margin="275,51,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="{x:Static p:Resources.friendsList}" HorizontalAlignment="Left" Height="50" Margin="566,53,0,0" VerticalAlignment="Top" Width="186"/>
        <ListView HorizontalAlignment="Left" Height="167" Margin="561,90,0,0" VerticalAlignment="Top" Width="208" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="166" Margin="275,92,0,0" VerticalAlignment="Top" Width="181" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="BtnStart" Content="{x:Static p:Resources.start}" HorizontalAlignment="Left" Height="43" Margin="686,333,0,0" VerticalAlignment="Top" Width="83" Click="BtnStart_Click"/>
        <TextBox x:Name="TbMessage" HorizontalAlignment="Left" Height="39" Margin="273,282,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="BtnSend" Content="{x:Static p:Resources.send}" HorizontalAlignment="Left" Height="44" Margin="477,280,0,0" VerticalAlignment="Top" Width="98" Click="BtnSend_Click"/>
        <Label Content="{x:Static p:Resources.theGameCodeIs}" HorizontalAlignment="Left" Height="44" Margin="272,12,0,0" VerticalAlignment="Top" Width="148"/>
        <TextBlock x:Name="TbCodeGame" HorizontalAlignment="Left" Height="39" Margin="425,14,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="131"/>

        <WrapPanel Background="White" Margin="32,78,544,126" Orientation="Vertical">
            <Label x:Name="LblInvitateFriends" Content="{x:Static p:Resources.playWithFriends}" Width="228" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" />
            <Label x:Name="LblInstructionEnterUsername" Content="{x:Static p:Resources.instructionEnterUsername}" Width="228" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" />
            <TextBox x:Name="TbUsername" TextWrapping="Wrap" Width="100" Background="#FFD6E3E3" Margin="7" BorderBrush="#FFD1E5E5"/>
            <Button x:Name="BtnSendByUsername" Content="{x:Static p:Resources.sendCode}" Width="150" Margin="7" Click="BtnSendByUsername_Click"/>
            <TextBox x:Name="TbSendByEmail" TextWrapping="Wrap" Text="{x:Static p:Resources.instructionSendCodeByEmail}" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="{x:Null}" />
            <Label x:Name="LblEmail" Content="{x:Static p:Resources.email}" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" />
            <TextBox x:Name="TbEmail" TextWrapping="Wrap" Width="100" Background="#FFD6E3E3" Margin="7" BorderBrush="#FFD1E5E5"/>
            <Button x:Name="BtnSendByEmail" Content="{x:Static p:Resources.instructionSendCodeByEmail}" Width="200"/>

        </WrapPanel>


    </Grid>
</Page>
