<Page x:Class="unoProyect.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:unoProyect.Properties"
      xmlns:local="clr-namespace:unoProyect"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.login}">
    <Grid Background="White">
        <Label x:Name="lblUno" Grid.Column="1" Grid.Row="1" Content="{x:Static p:Resources.game}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Height="59" Grid.RowSpan="2"/>
        <Label x:Name="lblUser" Grid.Column="1" Grid.Row="3" Content="{x:Static p:Resources.user}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" Margin="176,5,0,0" Height="28" Width="142"/>
        <TextBox x:Name="tbUser" Grid.Column="1" Grid.Row="3" Margin="336,3,254,13" RenderTransformOrigin="0.551,0.152"/>
        <Label x:Name="lblPassword" Grid.Column="1" Grid.Row="4" Content="{x:Static p:Resources.password}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="176,0,0,0" Height="26" Width="79"/>
        <PasswordBox x:Name="pbPassword" Grid.Column="1"  Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="171" Margin="336,0,0,0" Height="28"/>
        <Button Grid.Column="1" Grid.Row="6"  x:Name="BtnLogin" Content="{x:Static p:Resources.login}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Click="BtnLogin_Click" Height="35"/>
        <Button Grid.Column="1" Grid.Row="7" x:Name="btnForgotMyPassword" Content="{x:Static p:Resources.forgetMyPassword}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="264,16,0,0"/>
        <Button Grid.Column="1" Grid.Row="7" x:Name="BtnSignUp" Content="{x:Static p:Resources.signUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnSignUp_Click" Margin="397,16,0,0" Height="20" Width="75"/>
        <Button Grid.Column="1" Grid.Row="8" x:Name="btnAsGuest" Content="{x:Static p:Resources.playAsGuest}" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="0,15,0,0"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

    </Grid>
</Page>
